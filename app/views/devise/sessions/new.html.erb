<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
  <h2 class="text-center mb-4">Connexion</h2>
  <div class="mb-3">
    <%= f.input :email, label: "Email", input_html: { class: "form-control", autocomplete: "email", required: true } %>
  </div>

  <div class="mb-3">
    <%= f.input :password, label: "Mot de passe", input_html: { class: "form-control", autocomplete: "current-password", required: true } %>
  </div>

  <div class="d-flex justify-content-between align-items-center">
    <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi", input_html: { class: "form-check-input" } %>
    <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "forgot-password" %>
  </div>

  <%= f.button :submit, "Se connecter", class: "btn btn-login mt-3" %>
<% end %>

<div class="text-center mt-3">
  <%= link_to "Créer un compte", new_registration_path(resource_name), class: "forgot-password" %>
</div>

